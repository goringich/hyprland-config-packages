[Unit]
Description=User SSH Agent
Documentation=man:ssh-agent(1)

[Service]
Type=simple
Environment=SSH_AUTH_SOCK=%t/ssh-agent.socket
ExecStart=/usr/bin/ssh-agent -D -a ${SSH_AUTH_SOCK}
Restart=on-failure

[Install]
WantedBy=default.target
[Unit]
Description=SSH key agent
Documentation=man:ssh-agent(1)

[Service]
Type=exec
Environment=SSH_AUTH_SOCK=%t/ssh-agent.socket
ExecStart=/usr/bin/ssh-agent -D -a $SSH_AUTH_SOCK
Restart=on-failure
RestartSec=3

[Install]
WantedBy=default.target